<div class="page-header">
  <h2>ログイン</h2>
</div>


<%= form_for(resource, :as => resource_name,
  :url => session_path(resource_name),
  :html => { :class => 'form-horizontal' }) do |f| %>

  <div class="control-group">
    <%= f.label 'メールアドレス', class: 'control-label' %>
    <div class="controls">
      <%= f.email_field :email, :autofocus => true, class: 'text_field' %>
    </div>
  </div>

  <div class="control-group">
    <%= f.label 'パスワード', class: 'control-label' %>
    <div class="controls">
      <%= f.password_field :password, class: 'text_field' %>
    </div>
  </div>

  <% if devise_mapping.rememberable? -%>
    <div class="control-group">
      <%= f.label 'アカウント情報を記憶', class: 'control-label' %>
      <div class="controls"><%= f.check_box :remember_me %></div>
    </div>
  <% end -%>

  <div class="form-actions">
    <%= f.submit "ログイン", class: 'btn btn-primary' %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
