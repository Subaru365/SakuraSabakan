<div class="page-header">
  <h1>
    HTTP監視ログ一覧
    <small>- <%= @server.address %></small>
  </h1>
</div>
<ul class="breadcrumb">
  <li><%= link_to 'Dashboard', servers_path %> <span class="divider">/</span></li>
  <li><%= link_to @server.address, @server %> <span class="divider">/</span></li>
  <li class="active">HTTP</li>
</ul>
<%= javascript_tag do %>
  var http_logs_path = '<%= server_http_logs_path @server, recent: params[:recent] %>.json';
<% end %>
<div id='http_logs_chart' style='width: 100%'></div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>日時</th>
      <th>結果</th>
      <th>平均応答時間[ms]</th>
      <th>ロス[%]</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @http_logs.each do |http_log| %>
      <tr>
        <td><%= http_log.date %></td>
        <td>
          <% case http_log.status %>
            <% when /^[1-3]/ %>
              <span class="label label-success"><%= http_log.status %></span>
            <% else %>
              <span class="label label-important"><%= http_log.status %></span>
          <% end %>
          <%= link_to '詳細',
            server_http_log_path(@server, http_log),
            :class => 'btn btn-mini btn-info' %>
        </td>
        <td><%= http_log.avg %></td>
        <td><%= http_log.failed_rate %></td>
        <td>

          <%= link_to '削除',
                      server_http_log_path(@server, http_log),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-mini btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<hr>
<%= link_to '戻る', server_path(@server), :class => 'btn'  %>
