<dl class="dl-horizontal">
  <dt><strong>監視日時:</strong></dt>
  <dd><%= l @http_log.date %></dd>
  <dt><strong>対象サーバアドレス:</strong></dt>
  <dd><%= @http_log.server.address %></dd>
  <dt><strong>状態:</strong></dt>

  <dd>
    <% case @http_log.status %>
      <% when /^[1-3]/ %>
        <span class="label label-success"><%= @http_log.status %></span>
      <% else %>
        <span class="label label-important"><%= @http_log.status %></span>
    <% end %>
  </dd>
  <dt><strong>応答時間(最小/平均/最大)[ms]:</strong></dt>
  <dd><%= "#{@http_log.min}/#{@http_log.avg}/#{@http_log.max}" %></dd>
  <dt><strong>ロス[%]:</strong></dt>
  <dd><%= @http_log.failed_rate %></dd>
  <dt><strong>http実行ログ:</strong></dt>
  <br>
  <pre><%= @http_log.detail %></pre>
</dl>
