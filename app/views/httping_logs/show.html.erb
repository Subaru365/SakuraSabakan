<dl class="dl-horizontal">
  <dt><strong>監視日時:</strong></dt>
  <dd><%= l @httping_log.date %></dd>
  <dt><strong>対象サーバアドレス:</strong></dt>
  <dd><%= @httping_log.server.address %></dd>
  <dt><strong>状態:</strong></dt>

  <dd>
    <% case @httping_log.status %>
      <% when /^[1-3]/ %>
        <span class="label label-success"><%= @httping_log.status %></span>
      <% else %>
        <span class="label label-important"><%= @httping_log.status %></span>
    <% end %>
  </dd>
  <dt><strong>応答時間(最小/平均/最大)[ms]:</strong></dt>
  <dd><%= "#{@httping_log.min}/#{@httping_log.avg}/#{@httping_log.max}" %></dd>
  <dt><strong>ロス[%]:</strong></dt>
  <dd><%= @httping_log.failed_rate %></dd>
  <dt><strong>httping実行ログ:</strong></dt>
  <br>
  <pre><%= @httping_log.detail %></pre>
</dl>
