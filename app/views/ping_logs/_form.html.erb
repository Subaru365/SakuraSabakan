<%= form_for @ping_log, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :server_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.collection_select :server_id, @servers, :id, :address %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.select :status, ['Success', 'Failed'] %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :ping_detail, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_area :ping_detail, :class => 'text_area' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                ping_logs_path, :class => 'btn' %>
  </div>
<% end %>
