<%= form_for @server, :html => { :class => 'form-horizontal' } do |f| %>
  <% if @server.errors.any? %>
    <div class="alert alert-block fade in alert-error">
      <h4>エラー</h4>
      <ul>
        <% @server.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <div class="control-group <%= 'error' unless @server.errors[:address].blank? %>">
    <%= f.label 'サーバアドレス', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :address, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group <%= 'error' unless @server.errors[:description].blank? %>">
    <%= f.label '説明', :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :description, :class => 'text_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                servers_path, :class => 'btn' %>
  </div>
<% end %>
