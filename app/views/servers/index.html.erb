<%= javascript_tag do %>
  var active_menu_id = "dashboard";
<% end %>
<div class="page-header">
  <h1>
    Dashboard
  </h1>
</div>

<%= javascript_tag do %>
  var ping_logs_path = {};
  var http_logs_path = {};
<% end %>
<% @servers.each_slice 2 do |servers| %>
  <div class="row">
    <% servers.each do |server| %>
    <% status = server.status_before(1.day) %>
    <% rate = server.recent_rate(1.day) %>
    <div class="span6">
      <div class="accordion-group">
        <div class="accordion-heading">
          <%= status_accordion_toggle_tag status, "#server_#{server.id}" do %>
            <h4>
              <%= status_icon_tag status %>
              <%= rate_tag rate, status %>
              <%= server.address %>
              - <%= server.description %>
            </h4>
          <% end %>
        </div>
        <div id="server_<%= server.id %>" class="accordion-body collapse">
          <div class="accordion-inner">
            <% if account_signed_in? %>
              <%= link_to icon_tag('icon-cog') + '設定',
                edit_server_path(server), :class => 'btn btn-mini' %>
            <% end %>
              <%= render partial: 'services', locals: {services: server.services} %>

          </div>
        </div>
      </div>
    </div>
    <% end %>
  </div>
<% end %>

<!-- Modal -->
<div id="pingDetailModal" class="modal hide fade" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h3 id="myModalLabel">詳細ログ</h3>
  </div>
  <div class="modal-body"></div>
  <div class="modal-footer">
    <button class="btn" data-dismiss="modal" aria-hidden="true">Close</button>
  </div>
</div>

<hr>
<% if account_signed_in? %>
  <%= link_to content_tag(:i, '', class: 'icon-white icon-plus') + 'サーバを追加',
    new_server_path, :class => 'btn btn-primary' %>
<% end %>
