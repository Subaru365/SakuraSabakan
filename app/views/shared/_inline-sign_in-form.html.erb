<% unless account_signed_in? %>
  <!-- サインインフォーム -->
  <%= form_for('account',
    :url => account_session_path,
    :html => { :class => 'form-inline' }) do |f| %>

    <%= f.email_field :email,
      autofocus: true,
      class: 'input-large',
      placeholder: 'Email' %>
    <br>
    <%= f.password_field :password,
      class: 'input-small',
      placeholder: 'Password' %>

    <label class="checkbox">
      <%= f.check_box :remember_me %>保存
    </label>

    <%= f.submit "サインイン", class: 'btn btn-primary' %>
  <% end %>
<% else %>
  <%= link_to icon_tag('icon-white icon-off') + 'サインアウト',
    destroy_account_session_path, method: :delete, class: 'btn btn-primary' %>
<% end %>